{
  "name": "react-hibernate-workspace",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/spautz/react-hibernate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spautz/react-hibernate.git"
  },
  "bugs": {
    "url": "https://github.com/spautz/react-hibernate/issues"
  },
  "author": "Steven Pautz <spautz@gmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "sideEffects": false,
  "scripts": {
    "____ BASE COMMANDS _________________________________________________": "",
    "build:all": "lerna exec yarn build",
    "clean:all": "lerna exec yarn clean && rimraf storybook-static/",
    "test": "jest --projects ./packages/*/",
    "test:all": "lerna exec yarn test",
    "format": "prettier --write \"**/*.*\"",
    "format:check": "prettier --list-different \"**/*.*\"",
    "lint": "eslint \"**/*.{js,jsx,json,ts,tsx}\"",
    "release": "standard-version --sign --release-as ",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "types": "tsc --noEmit --p tsconfig.json --jsx react",
    "____ HOOKS _________________________________________________________": "",
    "prepare": "lerna bootstrap && yon build:all",
    "____ INTEGRATION ___________________________________________________": ""
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@storybook/addon-knobs": "^5.3.14",
    "@storybook/addons": "^5.3.14",
    "@storybook/preset-typescript": "^1.2.0",
    "@storybook/react": "^5.3.14",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.1",
    "@types/history": "^4.7.5",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.6",
    "@types/react": "^16.9.23",
    "@types/react-is": "^16.7.1",
    "@types/react-redux": "^7.1.7",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "babel-loader": "^8.0.6",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "fork-ts-checker-webpack-plugin": "^4.0.4",
    "history": "^4.10.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "microbundle": "^0.12.0-next.8",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-docgen-typescript-loader": "^3.6.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-test-renderer": "^16.12.0",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "rimraf": "^3.0.2",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.5",
    "yarn-or-npm": "^3.0.1"
  },
  "lint-staged": {
    "**/*.{css,html,js,jsx,json,less,md,scss,ts,tsx}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "yon format"
    }
  }
}
